                        />


                    <EditText

                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN20"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P20 Ends-->
			
			<!-- P21 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN21"
                    >

                    <TextView


