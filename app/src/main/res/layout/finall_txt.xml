                        />


                    <EditText

                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN14"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P14 Ends-->
			
			<!-- P15 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN15"
                    >

