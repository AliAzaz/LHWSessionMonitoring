                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN19"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW involved mothers /participants in the discussion"

                        />


                    <EditText

